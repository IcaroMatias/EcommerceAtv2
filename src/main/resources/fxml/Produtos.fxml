<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.atividade.ecommerce_atv2.controller.ProdutosController">

    <children>

        <!-- Barra azul -->
        <Rectangle arcHeight="5.0" arcWidth="5.0"
                   fill="#0d0aad"
                   height="48.0"
                   width="600.0" />

        <Text fill="#ffffff"
              layoutX="110.0"
              layoutY="35.0"
              text="CADASTRO PRODUTO">
            <font>
                <Font name="Arial Bold" size="30.0"/>
            </font>
        </Text>

        <!-- FORMULÁRIO -->
        <VBox layoutX="26.0"
              layoutY="72.0"
              spacing="5">

            <children>
                <Label text="Nome:"/>
                <TextField fx:id="txtNome"/>

                <Label text="Código:"/>
                <TextField fx:id="txtCodigo"/>

                <Label text="Preço:"/>
                <TextField fx:id="txtPreco"/>

                <Label text="Estoque:"/>
                <TextField fx:id="txtEstoque"/>
            </children>
        </VBox>

        <!-- TABELA -->
        <TableView fx:id="tabelaProdutos"
                   layoutX="220.0"
                   layoutY="72.0"
                   prefHeight="196.0"
                   prefWidth="350.0"
                   onMouseClicked="#selecionarItem">

            <columns>
                <TableColumn fx:id="calId" text="Id" prefWidth="60"/>
                <TableColumn fx:id="calNome" text="Nome" prefWidth="90"/>
                <TableColumn fx:id="calCodigo" text="Código" prefWidth="80"/>
                <TableColumn fx:id="calPreco" text="Preço" prefWidth="60"/>
                <TableColumn fx:id="calEstoque" text="Estoque" prefWidth="70"/>
            </columns>

        </TableView>

        <!-- BOTÕES -->
        <Button layoutX="380.0"
                layoutY="300.0"
                text="Salvar"
                onAction="#salvarProduto"/>

        <Button layoutX="460.0"
                layoutY="300.0"
                text="Excluir"
                onAction="#excluirProduto"/>

        <Button layoutX="460.0"
                layoutY="340.0"
                text="Limpar"
                onAction="#limparCampos"/>

    </children>

</AnchorPane>