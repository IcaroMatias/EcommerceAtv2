<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="root"
            maxHeight="-Infinity"
            maxWidth="-Infinity"
            minHeight="-Infinity"
            minWidth="-Infinity"
            prefHeight="400.0"
            prefWidth="600.0"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.atividade.ecommerce_atv2.controller.MainController">

    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>

                <!-- HOME -->
                <Menu mnemonicParsing="false" text="Home">
                    <items>
                        <MenuItem mnemonicParsing="false"
                                  onAction="#abrirHome"
                                  text="Retornar" />
                    </items>
                </Menu>

                <!-- CADASTRO -->
                <Menu mnemonicParsing="false" text="Cadastro">
                    <items>
                        <MenuItem mnemonicParsing="false"
                                  onAction="#abrirClientes"
                                  text="Clientes" />

                        <MenuItem mnemonicParsing="false"
                                  onAction="#abrirProdutos"
                                  text="Produtos" />

                        <MenuItem mnemonicParsing="false"
                                  onAction="#abrirVendas"
                                  text="Nova Venda" />
                    </items>
                </Menu>

                <!-- RELATÓRIO -->
                <Menu mnemonicParsing="false" text="Relatório">
                    <items>
                        <MenuItem mnemonicParsing="false"
                                  onAction="#abrirRelatorioVendas"
                                  text="Vendas" />
                    </items>
                </Menu>

                <!-- AJUDA -->
                <Menu mnemonicParsing="false" text="Ajuda">
                    <items>
                        <MenuItem mnemonicParsing="false"
                                  text="About" />
                    </items>
                </Menu>

            </menus>
        </MenuBar>
    </top>

</BorderPane>